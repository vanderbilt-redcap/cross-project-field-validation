{
	"name": "Cross Project Field Validation",

	"namespace": "Vanderbilt\\CrossProjectFieldValidationExternalModule",

	"authors": [
		{
			"name": "Eva Bascompte Moragas",
			"email": "datacore@vanderbilt.edu",
			"institution": "Vanderbilt University Medical Center"
		}
	],

	"permissions": ["redcap_module_configure_button_display","hook_every_page_top"],

	"no-auth-pages":["isValidValue"],

	"description": "Given a source and destination project, it validates the data from the given source field.",

	"project-settings": [
		{
			"key": "validation",
			"name": "Validation",
			"required": true,
			"type": "sub_settings",
			"repeatable":true,
			"sub_settings":[
				{
					"key": "project-source",
					"name": "Source project",
					"required": true,
					"type": "project-id"
				},
				{
					"key": "field-source",
					"name": "Name field of the SOURCE project",
					"required": true,
					"type": "text"
				},
				{
					"key": "field-destination",
					"name": "Name field of the DESTINATION project",
					"required": true,
					"type": "text"
				},
				{
					"key": "case-sensitive",
					"name": "Case-sensitive",
					"type": "checkbox"
				},
				{
					"key": "prevent-submission",
					"name": "Prevent Submission",
					"type": "checkbox"
				}
			]
		}

	],
	"system-settings": [
		{
			"key": "pids",
			"name": "Project ID (source PID, destination PID) ",
			"required": true,
			"type": "text",
			"repeatable":true
		}
	],
	"compatibility": {
		"php-version-min": "5.5.0",
		"php-version-max": "",
		"redcap-version-min": "8.3.2",
		"redcap-version-max": ""
	}
}
